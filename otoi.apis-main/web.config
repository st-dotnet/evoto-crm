<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <rule name="Backend API" stopProcessing="true">
          <match url="^backend/api/(.*)" />
          <action type="Rewrite" url="backend/{R:1}" />
        </rule>
      </rules>
    </rewrite>

    <handlers>
      <add name="PythonFastCgi"
           path="*"
           verb="*"
           modules="FastCgiModule"
           scriptProcessor="C:\inetpub\crm.evototechnologies\Backend\venv\Scripts\python.exe|C:\inetpub\crm.evototechnologies\Backend\venv\lib\site-packages\wfastcgi.py"
           resourceType="Unspecified"
           requireAccess="Script" />
    </handlers>
  </system.webServer>

  <appSettings>
    <add key="WSGI_HANDLER" value="run.app" />
    <add key="PYTHONPATH" value="C:\inetpub\crm.evototechnologies\Backend" />
    <add key="FLASK_ENV" value="production" />
    <add key="WSGI_LOG" value="C:\inetpub\crm.evototechnologies\Backend\wfastcgi.log" />
  </appSettings>
</configuration>
